{
  "name": "tir-api-node",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "start": "moleculer-runner",
    "cli": "moleculer connect Redis",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services",
    "dev": "moleculer-runner --repl --hot services/**/*.service.js --envfile ./.env.development",
    "dc:db": "docker-compose -f config/development/docker-compose.yml up mongo redis tirengine",
    "dc:db:linux": "docker compose -f config/development/docker-compose.yml up mongo redis tirengine",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "eslint": "^8.25.0",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "moleculer-repl": "^0.7.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.2",
    "dotenv": "^16.3.1",
    "ioredis": "^5.0.0",
    "moleculer": "^0.14.26",
    "moleculer-db": "^0.8.20",
    "moleculer-db-adapter-mongo": "^0.4.15",
    "moleculer-web": "^0.10.4"
  },
  "engines": {
    "node": ">= 16.x.x"
  },
  "jest": {
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }
}
